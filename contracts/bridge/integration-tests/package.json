{
    "name": "bridge-contract-integration-tests",
    "version": "0.1.0",
    "description": "Integration tests for the bridge contract",
    "type": "module",
    "scripts": {
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:watch": "vitest watch",
        "generate-types": "papi add devnet -w ws://localhost:9944",
        "generate-contract": "papi ink add ../../../target/ink/bridge/bridge.contract",
        "postinstall": "papi && patch-package"
    },
    "dependencies": {
        "@polkadot-api/descriptors": "file:.papi/descriptors",
        "@polkadot-api/sdk-ink": "0.4.0",
        "@polkadot/util": "^13.2.4",
        "polkadot-api": "^1.16.4"
    },
    "devDependencies": {
        "@polkadot-labs/hdkd": "^0.0.8",
        "@polkadot-labs/hdkd-helpers": "^0.0.8",
        "@types/node": "^22.5.5",
        "@vitest/ui": "^2.1.1",
        "patch-package": "^8.0.0",
        "tsx": "^4.19.1",
        "typescript": "^5.6.2",
        "vitest": "^2.1.1"
    }
}
